<% include ../partials/header %>
<div class="container">
    <h1><%=campground.name%></h1>

    <img class="img-thumbnail mx-auto d-block" src="<%= campground.image %>">

    <p><%= campground.description %></p>

    <% campground.comments.forEach((comment) => { %>
        <p><strong><%= comment.author %></strong>: <%= comment.text %></p>
    <% }) %>

    <form action="/campgrounds/<%= campground._id %>" method="POST" >
        <div class="form-group">
            <input type="text" name="comment[author]" placeholder="Name">
        </div>
        <div class="form-group">
            <textarea name="comment[text]" placeholder="Comment"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary">Add comment</button>
        </div>
    </form>
    <a href="/campgrounds">Go Back</a>
</div>
<% include ../partials/footer %>