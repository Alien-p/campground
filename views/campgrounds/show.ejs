<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= campground.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">Price/night: XX$</h4>
                    <h4><%=campground.name%></h4>
                    <p><%= campground.description %></p>
                    <p>
                        <em>Submitted by: <%= campground.author.username %></em>
                    </p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST" id="delete-form">
                            <button class="btn btn-warning">Remove</a>
                        </form>
                    <% } %>
                </div>
            </div>

            <div class="well">
                <% campground.comments.forEach((comment) => { %>
                    <div class="row">
                        <p><strong><%= comment.author.username %></strong>: <%= comment.text %></p>
                        <hr>
                    </div>
                <% }) %>

                <form action="/campgrounds/<%= campground._id %>" method="POST" >
                    <div class="form-group">
                        <textarea name="comment[text]" placeholder="Comment"></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-primary">Add comment</button>
                    </div>
                </form>
                <a href="/campgrounds">Go Back</a>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>